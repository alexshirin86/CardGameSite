@model Product
@{
    ViewBag.Title = "Edit  Product";
    Layout = "_AdminLayout";
}
<link rel="stylesheet" href="~/css/admin.css" />
<div class="admin-container">
    <div class="admin-edit-container">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="Name">Имя</label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Описание</label>
                <div><span asp-validation-for="Description" class="text-danger"></span></div>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <!--<div class="form-group">
                <label asp-for="Category"></label>
                   <input asp-for="Category" class="form-control" />
            </div>-->
            <div class="form-group">
                <label asp-for="Price"> Цена</label>
                <div><span asp-validation-for="Price" class="text-danger"></span></div>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Сохранить</button>
                <a asp-action="Index" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>
