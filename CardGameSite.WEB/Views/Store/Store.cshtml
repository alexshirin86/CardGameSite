@model ProductsList

<div class="bg-dark text-white p-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col navbar-brand">CARDS STORE</div>
            <div class="col-6 text-right">
                <vc:cart-summary />
            </div>
        </div>
    </div>
</div>
<div class="row m-1 p-1">
    <div id="categories" class="col-3">
        <vc:navigation-menu-store />
    </div>
    <div class="col-9">

        @foreach (var p in Model.Products)
        {
            <partial name="ProductSummary" model="p" />
        }
        <div page-model="@Model.PagingInfo" page-action="Store" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-outline-dark"
             page-class-selected="btn-primary" page-url-category="@Model.CurrentCategory"
             class="btn-group pull-right m-1">
        </div>
    </div>
</div>
